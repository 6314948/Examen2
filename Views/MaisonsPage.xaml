<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="HalloWinUI.Views.MaisonsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:HalloWinUI.ViewModels"
    Background="#FFF3DF"
    mc:Ignorable="d">

    <Grid x:Name="root" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12" Spacing="8">
                <TextBox Width="300" PlaceholderText="Entrer une adresse" Text="{Binding NouvelleMaison, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <Button Content="Ajouter" Click="BtnAjouter_Click"></Button>
            </StackPanel>
        </StackPanel>

        <GridView
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Maisons, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.MaisonSelectionnee, Mode=TwoWay}">

            <GridView.ItemContainerStyle>
                <Style TargetType="GridViewItem">
                    <Setter Property="Margin" Value="12,12,12,12" />
                </Style>
            </GridView.ItemContainerStyle>

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:MaisonViewModel">
                    <Border
                        Width="280"
                        Height="150"
                        Background="GhostWhite"
                        BorderBrush="#FFFFCC99"
                        BorderThickness="2">
                        <StackPanel Padding="15" Spacing="15">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="{x:Bind Adresse, Mode=OneWay}"
                                TextWrapping="Wrap" />
                            <StackPanel Spacing="8">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{x:Bind StatutCouleur, Mode=OneWay}"
                                    Text="{x:Bind StatutTexte, Mode=OneWay}" />
                                <CheckBox Content="Signaler" IsChecked="{x:Bind EstSignalee, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>

                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>

        </GridView>

        <Button
            Grid.Row="2"
            HorizontalAlignment="Left"
            Background="DarkOrange"
            Click="BtnSupprimer_Click">
            <StackPanel Orientation="Horizontal" Spacing="6">
                <FontIcon FontSize="14" Glyph="&#xE74D;" />
                <TextBlock VerticalAlignment="Center" Text="Supprimer" />
            </StackPanel>
        </Button>

    </Grid>

</Page>